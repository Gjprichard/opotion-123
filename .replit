modules = ["python-3.11", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "jq", "libxcrypt", "openssl", "pkg-config", "postgresql", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "重启应用"
author = 39412638
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f gunicorn || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f python || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "kill $(lsof -t -i:5000) 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"所有进程已停止，端口已清除\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"

[[ports]]
localPort = 5000
externalPort = 80
